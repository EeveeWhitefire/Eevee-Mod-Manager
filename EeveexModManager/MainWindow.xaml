<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EeveexModManager"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="EeveexModManager.MainWindow"
        mc:Ignorable="d"
        Title="Eeveex Mod Manager" Height="730" ResizeMode="NoResize" Width="1600">
    <Grid Name="MainGrid">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                <Button Content="Login" FontSize="30" Margin="0,0,20,0" Click="LogInButton_Click" Name="LogInButton" Width="150" Height="45"/>
                <TextBlock Text="Not logged in." FontSize="25" Foreground="Red" VerticalAlignment="Center" Name="LoginState_TextBox"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,10, 0 ,0">
                <TextBlock Text="Mod List:" HorizontalAlignment="Left" FontSize="20" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Width="920" >
                    <TextBlock Text="State:" HorizontalAlignment="Left" FontSize="10" Margin="10,0,10,0"/>
                    <TextBlock Text="Uninstall:" HorizontalAlignment="Left" FontSize="10" Margin="0,0,10,0"/>
                    <TextBlock Text="Name:" HorizontalAlignment="Left" FontSize="10" Margin="0,0,443,0"/>
                    <TextBlock Text="Author:" HorizontalAlignment="Left" FontSize="10" Margin="0,0,138,0"/>
                    <TextBlock Text="Mod ID:" HorizontalAlignment="Left" FontSize="10" Margin="0,0,82,0"/>
                    <TextBlock Text="Version:" HorizontalAlignment="Left" FontSize="10" Margin="0,0,10,0"/>
                </StackPanel>
                <TreeView Height="350" Width="920" Name="ModList_TreeView"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="30,10, 0, 0">
                <TextBlock Text="Downloads:" FontSize="20" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                <TreeView Name="DownloadsTreeView" Width="920" Height="150" HorizontalAlignment="Left"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Name="RightStack">
            <Button Name="ApplicationLaunch_Button" Content="Launch" FontSize="40" Foreground="Green" Height="70" Width="400" Click="LaunchApplicationButton_Click" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <CheckBox Name="AssociationWithNXM_CheckBox" Margin="10,0" VerticalAlignment="Center"/>
            <Button Content="Associate NXM" HorizontalAlignment="Right" FontSize="30" VerticalAlignment="Center" Click="Association_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
