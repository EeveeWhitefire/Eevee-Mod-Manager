<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EeveexModManager"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="EeveexModManager.MainWindow"
        mc:Ignorable="d"
        Title="Eeveex Mod Manager" Height="650" Width="1250">
    <Grid Name="MainGrid">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,20">
            <Label Content="Mod List:" HorizontalAlignment="Left" FontSize="20"/>
            <TreeView Height="500" Width="800" Name="ModList_TreeView"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Name="ApplicationLaunch_Button" Content="Launch" FontSize="40" Foreground="Green" Width="200" Height="70" Click="LaunchApplicationButton_Click" Margin="0,0,0,10"/>
            <ComboBox Name="ApplicationPicker_Selection" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="40" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <CheckBox Name="AssociationWithNXM_CheckBox" Margin="10,0" VerticalAlignment="Center"/>
            <Button Content="Associate" HorizontalAlignment="Right" VerticalAlignment="Center" Width="75" Click="Association_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
