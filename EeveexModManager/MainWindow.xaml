<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EeveexModManager"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="EeveexModManager.MainWindow"
        mc:Ignorable="d"
        Title="Eeveex Mod Manager" Height="730" ResizeMode="NoResize" Width="1600">
    <Grid Name="MainGrid" Background="LightGray">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <ComboBox Name="ProfileSelector" Margin="30,0,10,0" Width="200" HorizontalAlignment="Left">
                    <TextBlock Text="&lt;Manage Profiles&gt;"/>
                </ComboBox>
                <Button Content="⚙" Click="SettingsButton_Click"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,10, 0 ,0">
                <TextBlock Text="Mod List:" HorizontalAlignment="Left" FontSize="20" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Width="920" >
                </StackPanel>
                <ListView Height="350" Width="1000" Name="ModList_View" MouseDoubleClick="ModList_View_MouseDoubleClick">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Open in File Explorer" Click="Mod_OpenInExplorer_Click"/>
                            <MenuItem Header="Uninstall Mod" Click="Mod_UninstallButton_Click"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="State" Width="50" DisplayMemberBinding="{Binding ModState}" />
                            <GridViewColumn Header="Name" Width="300" DisplayMemberBinding="{Binding ModName}"/>
                            <GridViewColumn Header="Author" Width="120" DisplayMemberBinding="{Binding ModAuthor}"/>
                            <GridViewColumn Header="Mod ID" Width="100" DisplayMemberBinding="{Binding ModId}"/>
                            <GridViewColumn Header="Version" Width="100" DisplayMemberBinding="{Binding ModVersion}"/>
                            <GridViewColumn Header="Priority" Width="100" DisplayMemberBinding="{Binding Priority}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="30,10, 0, 0">
                <TextBlock Text="Downloads:" FontSize="20" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                <ListView Name="Downloads_View" Width="1000" Height="150" HorizontalAlignment="Left" MouseDoubleClick="Downloads_View_MouseDoubleClick" ContextMenuOpening="Downloads_View_ContextMenuOpening">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Cancel"/>
                            <MenuItem Header="Uninstall Mod" Click="Mod_UninstallButton_Click"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="250" DisplayMemberBinding="{Binding DownloadName}"/>
                            <GridViewColumn Header="Downloaded" Width="140" DisplayMemberBinding="{Binding CurrentNumberOfBytes}"/>
                            <GridViewColumn Header="Out of" Width="140" DisplayMemberBinding="{Binding NumberOfBytesInTotal}"/>
                            <GridViewColumn Header="Percentage" Width="120" DisplayMemberBinding="{Binding DownloadedPercentage}"/>
                            <GridViewColumn Header="Download Speed" Width="120" DisplayMemberBinding="{Binding Speed}"/>
                            <GridViewColumn Header="Average Speed" Width="120" DisplayMemberBinding="{Binding AverageSpeed}"/>
                            <GridViewColumn Header="State" Width="100" DisplayMemberBinding="{Binding State}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Name="RightStack" Grid.ColumnSpan="2">
            <Button Name="ApplicationLaunch_Button" Content="Launch" FontSize="40" Foreground="Green" Height="70" Click="LaunchApplicationButton_Click" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10">
            <Button Content="Login" FontSize="30" Margin="0,0,20,0" Click="LogInButton_Click" Name="LogInButton" Width="150" Height="45"/>
            <TextBlock Text="Not logged in." FontSize="25" Foreground="Red" VerticalAlignment="Center" Name="LoginState_TextBox"/>
        </StackPanel>
    </Grid>
</Window>
