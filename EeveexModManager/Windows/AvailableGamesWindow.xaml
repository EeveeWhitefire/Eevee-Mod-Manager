<Window x:Class="EeveexModManager.Windows.AvailableGamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EeveexModManager.Windows"
        xmlns:controls="clr-namespace:EeveexModManager.Controls"
        mc:Ignorable="d"
        Title="Please choose the games you'd like to mod:" Height="655" ResizeMode="NoResize" SizeToContent="Width">

    <Grid>
        <Grid.Resources>
            <BitmapImage x:Key="GameAdditionButtonBMP" UriSource="pack://application:,,,/Resources/gamedetectionaddition_button.png" />
            <Style TargetType="Border" x:Key="GameDetectionBorderStyle">
                <!--Set to true to not get any properties from the themes.-->
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="BorderBrush" Value="Gainsboro"/>
                <Setter Property="Visibility" Value="Hidden"/>
                <Setter Property="Width" Value="514"/>
            </Style>
            <Style TargetType="Button" x:Key="GameAdditionButtonTemplate">
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="Transparent"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Image Source="{StaticResource GameAdditionButtonBMP}"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <StackPanel Orientation="Horizontal" Margin="20,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <StackPanel Orientation="Vertical" Margin="0,0,100,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Restart Scans" Margin="0,0,20,0" Width="100" Height="50" Click="RestartScansButton_Click" FontSize="16"/>
                    <Button Content="Ignore All" Width="100" Height="50" Click="IgnoreAllModsButton_Click" FontSize="16"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Confirm" Margin="0,0,20,0"  Width="100" Height="50" Click="ConfirmGamesButton_Click" FontSize="16" Name="Confirm_Button"/>
                    <Button Content="Confirm All" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="50" Click="ConfirmAllGamesButton_Click" FontSize="16"/>
                </StackPanel>
                <Button Content="Back" Margin="0,0,0,10" Height="40" FontSize="25" Click="GetBackToMainWindow_Click" Visibility="Hidden" Name="BackToMain_Button"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Name="GameSearchers_StackPanel">
                <StackPanel Orientation="Vertical" Margin="0, 0, 5, 0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Border Style="{StaticResource GameDetectionBorderStyle}" Visibility="Visible">
                        <Button Style="{StaticResource GameAdditionButtonTemplate}" Click="AddGameDetectionButton_Click"/>
                    </Border>
                    <Border Style="{StaticResource GameDetectionBorderStyle}">
                        <Button Style="{StaticResource GameAdditionButtonTemplate}" Click="AddGameDetectionButton_Click"/>
                    </Border>
                    <Border Style="{StaticResource GameDetectionBorderStyle}">
                        <Button Style="{StaticResource GameAdditionButtonTemplate}" Click="AddGameDetectionButton_Click"/>
                    </Border>
                    <Border Style="{StaticResource GameDetectionBorderStyle}">
                        <Button Style="{StaticResource GameAdditionButtonTemplate}" Click="AddGameDetectionButton_Click"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
