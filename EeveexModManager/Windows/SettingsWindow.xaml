<Window x:Class="EeveexModManager.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EeveexModManager.Windows"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="300" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid Background="#FF373737">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#FF373737"/>
            </Style>
        </Grid.Resources>
        <TabControl>
            <TabItem Header="Nexus">
                <Border BorderBrush="DarkSeaGreen" BorderThickness="2">
                    <StackPanel Orientation="Horizontal" Margin="7">
                        <TextBlock Text="Nexus Urls are associated:"/>
                        <CheckBox Name="AssociationWithNXM_CheckBox" Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
